<%= simple_form_for(@section) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :position, collection: @positions, label: false, prompt: "Position" %>
    <%= f.input :title, label: false, placeholder: "Titre" %>
    <%= f.input :text, label: false, placeholder: "Texte" %>
    <%= f.input :photos, as: :attachinary %>
  </div>

  <div class="form-actions text-center">
    <div>
      <%= f.submit "Publier la section", class: "btn btn-primary btn-block" %>
    </div>
    <div class="mt-4">
      <%= link_to 'Annuler', sections_path %>
    </div>
  </div>
<% end %>


